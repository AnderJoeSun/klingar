<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?android:attr/colorPrimary"
        android:elevation="@dimen/toolbar_elevation"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/ic_menu_white_24dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/mini_player_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/miniplayer_height"
        android:layout_alignParentBottom="true"
        card_view:cardElevation="@dimen/miniplayer_elevation"
        card_view:cardCornerRadius="0dp">

      <fragment
          android:name="net.simno.klingar.ui.fragment.MiniPlayerFragment"
          android:id="@+id/fragment_mini_player"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>

    </android.support.v7.widget.CardView>

  </RelativeLayout>

  <android.support.design.widget.NavigationView
      android:id="@+id/navigation"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="start"
      android:background="@color/background"
      app:itemTextColor="@color/drawer_item_text">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/navigation_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:layout_gravity="bottom"
        android:padding="@dimen/item_horizontal_padding"
        android:background="?android:attr/selectableItemBackground"
        android:drawablePadding="@dimen/item_horizontal_padding"
        android:drawableStart="@drawable/ic_settings_white_24dp"
        style="@style/ItemTitle"/>

  </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
